@model BettyTravelApp.Models.ViewModels.Customers.CustomerProfileViewModel

@{
    ViewBag.Title = "Profile Page";
}

<h2>Моят профил</h2>

<h3>Име: @Html.DisplayFor(vm => vm.Name)</h3>
<h3>Е-мейл: @Html.DisplayFor(vm => vm.Email)</h3>

<table class="table table-responsive table-striped">
    <tr>
        <th>Име на дестинацията</th>
        <th>Цена на почивката</th>
        <th>Начална дата</th>
        <th>Крайна дата</th>
    </tr>
    @foreach (var vacation in Model.Vacations)
    {
        <tr>
            <td>@Html.DisplayFor(vm => vacation.VacationName)</td>
            <td>@Html.DisplayFor(vm => vacation.Price)</td>
            <td>@Html.DisplayFor(vm => vacation.StartDate)</td>
            <td>@Html.DisplayFor(vm => vacation.EndDate)</td>
        </tr>

    }
</table>

@Html.ActionLink("Начало","Index","Home")