@model BettyTravelApp.Models.ViewModels.Customers.EditCustomerViewModel

@{
    ViewBag.Title = "Редактиране";
}
<br/>
<h2>Редактиране на профила</h2>
<br />

@using (Html.BeginForm())
{

   <div class="form-group">
        @Html.LabelFor(vm => vm.Email)
        @Html.EditorFor(vm => vm.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.Name)
        @Html.EditorFor(vm => vm.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Редактиране" class="btn btn-lg btn-primary"/>
    </div>

}
