@model BettyTravelApp.Models.ViewModels.Customers.CustomerProfileViewModel

@{
    ViewBag.Title = "Моят профил";

}

<h2>Моят профил</h2>

@Html.ActionLink("Редактиране на профила", "Edit")<br/>


<table class="table table-striped table-responsive ">
    <tr>
        <th><h4>Име на дестинацията</h4></th>
        <th><h4>Цена на почивката</h4></th>
        <th><h4>Премахване</h4></th>
    </tr>
    @foreach (var vacation in Model.Vacations)
    {
        <tr>
            <td>@Html.DisplayFor(vm => vacation.VacationName)</td>
            <td>@Html.DisplayFor(vm => vacation.Price)</td>
            <td>@Html.ActionLink("Изтриване", "Remove", new {id = vacation.Id}, new { @class = "btn btn-sm btn-primary " })</td>
        </tr>
    }
</table>

<div class="navigationlinks container-fluid" style="text-align: center">
    <div class="row">
        <div class="col-lg-12">
            @Html.ActionLink("Начало", "Index", "Home", null, new { @class = "btn btn-lg btn-primary " })
        </div>
    </div>
</div>
