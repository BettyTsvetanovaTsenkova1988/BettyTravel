@model IEnumerable<BettyTravelApp.Models.ViewModels.Admin.VacationVM>

@{
    ViewBag.Title = "Всички почивки";
}

<h2>Всички почивки</h2>

<h4>
    @Html.ActionLink("Създаване на нова почивка", "Create")
</h4>
<table class="table table-responsive table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VacationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VacationDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VacationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VacationDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Редактиране", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Детайли", "Details", new { id = item.Id }) |
                @Html.ActionLink("Изтриване", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
