<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-image: url(/Content/images/1.jpg)">
    <div class="navbar navbar-inverse navbar-fixed-top text-align: center">
        <div class="container ">
            <div class="navbar-header">
            </div>
            <div class="navbar-collapse collapse text-align: center">
                <ul class="nav navbar-nav">
                    <li><h4>@Html.ActionLink("Betty Travell", "Index", "Home")</h4></li>
                    <li>@Html.ActionLink("Начало", "Index", "Home")</li>
                    <li>@Html.ActionLink("Документи", "All", "Document")</li>
                    <li>@Html.ActionLink("За нас", "About", "Home")</li>
                    <li>@Html.ActionLink("Контакти", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Вход за администратори", "All", "Vacations", new {area = "Admin"}, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p><h4>Betty Travel @DateTime.Now.Year - Всички права запазени.</h4></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
